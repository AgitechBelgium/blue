<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="product_template_dg_form_view" model="ir.ui.view">
		<field name="name">product.template.provision.invoice</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//sheet//div[@name='options']" position="inside">
				<span class="d-inline-block">
					<field name="is_provision"/>
					<label for="is_provision"/>
				</span>
				<span class="d-inline-block">
					<field name="computed_in_total_invoice"/>
					<label for="computed_in_total_invoice"/>
				</span>
			</xpath>
		</field>
	</record>
</odoo>