<?xml version="1.0"?>
<odoo>
    <record id="res_config_settings_form_view_chat_gpt_bot" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.inherit.chat.gpt.bot</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mail.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='emails']" position="after">
                <script>
                    $(document).ready(function() {
                        if ($(document.body).find("div.chatbot_container") != undefined &amp;&amp; window.location.href.includes('chatgpt')){
                            $(document).find('div.settings').animate({
                                scrollTop: $(document.body).find("div.chatbot_container").offset().top - 200
                            }, 2000);
                            $(document).find('input#chatgpt_api_key').focus();
                        }
                    });
                </script>
                <h2>ChatGPT Bot Connection</h2>
                <div class="col-xs-12 row o_settings_container chatbot_container"
                     id="chatgpt_bot_info_settings">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane border-start-0">
                            <div class="content-group">
                                <div class="row mt8">
                                    <label class="col-lg-3" string="ChatGPT API Key"
                                           for="chatgpt_api_key"/>
                                    <field name="chatgpt_api_key"
                                           title="Provide the ChatGPT API key here"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
